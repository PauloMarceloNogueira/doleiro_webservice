extends layout
block content
  include header.jade
  br 
  .dashboard_one
    .row
      .col-md-6
        h2.text-uppercase Parciais
      .col-md-2
        .row
          .col-md-8
            h4.text-uppercase Pontuação total
          .col-md-4
            h2 -77.9
          .col-md-2
    br
    .row
      .col-md-6
        .plenario
      .col-md-6
        | LISTA COM OS POLITICOS
    br
    br 
    br 
  .dashboard_two
    .row
      .col-md-8 
        h3 MERCADO
      .col-md-4
    .filtersContent
      .row
        .col-md-10
        .col-md-2
          h5.text-uppercase Limpar Filtro    
    table.table.politicosTable
      thead.thead-inverse
        tr 
          th
            h5.text-uppercase Partido 
          th
            h5.text-uppercase Político
          th
            h5.text-uppercase Pontuação Parcial
          th
            
      tbody.politicos
          for politico in politicos
            tr 
              th 
                .partidoLogo
                  img(src="http://www.camara.leg.br/internet/Deputado/img/partidos/#{politico.partido}.gif")
                .partidoUf
                  h6 #{politico.uf}
                
              th 
                .row 
                  .col-md-2
                    img(src="#{politico.picture}",style="width:80px")
                  .col-md-4 
                    h4.text-uppercase #{politico.nomeParlamentar}
                    h6.text-uppercase DEPUTADO
              th 
                .parcialNote  
                  if politico.parcialNote == 0
                    | #{politico.parcialNote}
                  else
                    | -#{politico.parcialNote}
              th.thArrow
                .arrow
                  span.glyphicon.glyphicon-chevron-down
              //-   #{politico.id}
        
      
include footer.jade
